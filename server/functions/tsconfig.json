{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
	"baseUrl": "./",
	"paths": {
		"@/*": [
			"src/*"
		]
	},
	"resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
